<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="6dp"
    tools:context=".editcase">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/bottomLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/case_no"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/caseno"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:padding="0dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/next_hearing_date"
                    android:textStyle="bold"

                    />
                <EditText
                    android:id="@+id/nexthearingdate"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginHorizontal="5dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:focusableInTouchMode="false"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/last_hearing_date"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/lasthearingdate"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:focusableInTouchMode="false"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/status_head"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/statushead"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginHorizontal="5dp"
                    android:padding="0dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"

                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/projectName"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/RO"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/respondent"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginHorizontal="5dp"
                    android:maxLines="1"
                    android:padding="0dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/courtName"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/court"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:maxLines="2"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/courtType"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/courtType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:maxLines="1"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/legal_professiona"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/legalProffesional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:maxLines="1"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/office"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/officer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/advocate_law_firm"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/advocate_firm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="text"
                    android:maxLines="2"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total_claim_amount"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/listed_for"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/listedfor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/brief_history"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/breifhistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:padding="0dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/case_filing_date"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/casefilingdate"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="datetime"
                    android:maxLines="1"
                    android:padding="0dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:text="@string/save"
            android:theme="@style/Button.color2" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="0dp"
            android:backgroundTint="#AEA6CE"
            android:src="@android:drawable/ic_menu_delete"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>